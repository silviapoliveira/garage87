@using garage87.Enums
@model garage87.Models.RepairList

@{
    ViewData["Title"] = "RepairHistory";
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
}



<div class="container" style="margin-top:30px">
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-12">

                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title" style="float: left">Repair History</h3>
                        <button class="btn btn-info" style="float: right;" id="vehiclebn">Select Vehicle</button>
                    </div>
                    <div class="card-body">
                        <table id="tblData" width="100%" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Vehicle</th>
                                    <th>Employee</th>
                                    <th>Total</th>
                                    <th>Action</th>
                                </tr>
                            </thead>


                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal" id="bookingModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header" style="background-color:#212529;color:White">
                <h4 class="modal-title">Services Detail</h4>
                <button type="button" style="color:white" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal Body -->
            <div class="modal-body">
                <h5>Vehicle Registration: <span id="vehicleRegistration"></span></h5>
                <div class="table-responsive">
                    <table class="table text-center" id="bookingDetailsTable">
                        <thead>
                            <tr class="bg-light-gray">
                                <th>Service Name</th>
                                <th>Service Cost</th>
                            </tr>
                        </thead>
                        <tbody id="bookingDetailsBody">
                            <!-- Repair details will be loaded here -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Modal -->
<div class="modal" id="userIdModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="userIdModalLabel">Select Vehicle </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <select id="userIdInput" class="form-control">
                    <option value="" disabled selected>Select Vehicle</option>
                    @foreach (var vehicle in ViewBag.Vehicles)
                    {
                        <option value="@vehicle.Value">@vehicle.Text</option>
                    }
                </select>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="submitUserId">Submit</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script src="~/js/repairhistory.js"></script>
}