    <script>
        $(document).ready(function () {
            // Function to fetch notifications
            function fetchNotifications() {
                $.ajax({
                    url: '@Url.Action("GetNotifications", "Notification")',
                    method: 'GET',
                    success: function (data) {
                        $('.dropdown-menu').empty();
                        if (data.length > 0) {
                            $.each(data, function (index, item) {
                                $('.dropdown-menu').append(
                                    `<div style="margin:5px">
                                                                        <div class="media-body">
                                                                            <p class="text-sm">${item.message}</p>
                                                                                     <p class="text-sm text-muted">
                                                                                <i class="far fa-check mr-1"></i>
                                                                                <a href="#" class="mark-as-read text-end" style="color:red;" data-id="${item.id}">Mark as Read</a>
                                                                            </p>
                                                                        </div>
                                                                </div>
                                                                <div class="dropdown-divider"></div>`
                                );
                            });
                        } else {
                            $('.dropdown-menu').append('<p class="text-center">No notifications.</p>');
                        }
                    },
                    error: function () {
                        console.error('Failed to fetch notifications.');
                    }
                });
            }
            $(document).on('click', '.mark-as-read', function (e) {
                e.preventDefault();
                const notificationId = $(this).data('id');

                $.ajax({
                    url: '@Url.Action("MarkAsRead", "Notification")',
                    method: 'POST',
                    data: { id: notificationId },
                    success: function (response) {
                        fetchNotifications();
                    },
                    error: function () {
                        console.error('Failed to mark notification as read.');
                    }
                });
            });
            // Fetch notifications on page load
            fetchNotifications();

            // Optionally, set an interval to fetch notifications every few seconds
            // setInterval(fetchNotifications, 30000); // Fetch every 30 seconds
        });
    </script>

