@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Dashboard</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("EmployeeDashboard","Employees")">Home</a></li>
                    <li class="breadcrumb-item active">Send Mail</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<div class="container">
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="text-center">
                            <div style="text-align: center; margin-top: 20px;">

                                <a asp-action="SendMail" asp-controller="Email" class="btn btn-success btn-sm">Send Autoshop Closure Notice</a>
                                <a asp-action="SendReminderEmails" asp-controller="Email" class="btn btn-info btn-sm">Send Reminder Notice</a>
                            </div>
                        </h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

